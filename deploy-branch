#!/bin/bash
set -e

BRANCH=${1-$(git rev-parse --abbrev-ref HEAD)}

if ! grep -q 'machine beta-internal' ~/.netrc; then
  echo Please add your Jenkins token to \~/.netrc
  echo ------------------------------------------
  echo machine beta-internal port 8080
  echo login YOUR_LOGIN
  echo password YOUR_TOKEN
  echo ------------------------------------------
  echo Visit "http://beta-internal:8080/user/<your_github_login>/configure"
  echo and click \"Show API token\" to get your login and token
  exit 1
fi

curl -vi -q --fail -n -X POST http://beta-internal:8080/job/redeploy-gitter-webapp/build \
  --data-urlencode json="{\"parameter\": [{\"name\":\"SELECTED_GIT_BRANCH\", \"value\":\"origin/$BRANCH\"} ]}"
