<!doctype html>
<html class="{{#if hasCachedFonts}}fonts-loaded{{/if}}" lang="en">
<head>
	<meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1"/>
  <link id="favicon" rel="shortcut icon" href="{{cdn 'images/favicon-normal.ico' }}">

  <meta name="mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-capable" content="yes">

	<title>Home</title>

  {{> fonts}}
  <link rel="stylesheet" href="{{cdn 'styles/userhome.css' }}">
  <base target="_parent">
</head>
<body>
  <header class="userhome-header">
    <div class="userhome-header__logo">
      {{> logo_man}}
      <img class="userhome-header__logo-text" src='{{cdn "images/gitter-vector-logo.svg"}}'>
    </div>
    <nav class="userhome-header__nav">Home</nav>
    <h1 class="userhome-header__title">{{ welcomeMessage }}</h1>
  </header>
  <div class="userhome-main">
    <section class="userhome-pages">
      <article class="userhome-page">
        <i class="icon-globe"></i>
        <a class="userhome-page__button" href="/home/explore" target="_parent">Explore</a>
        <p>Explore rooms, talk and ship.</p>
      </article>
      <article class="userhome-page">
        <i class="icon-paper-plane"></i>
        <a class="userhome-page__button" href="/home#createroom" target="_parent">Create</a>
        <p>Create and start something.</p>
      </article>
      <article class="userhome-page">
        <i class="icon-graduation-cap"></i>
        <a class="userhome-page__button" href="/home/learn" target="_parent">Learn</a>
        <p>Learn about Gitter itself.</p>
      </article>
    </section>

    <section class="userhome-apps">
      <h3 class="userhome-heading">Download Apps</h3>

      {{#unless isNativeDesktopApp }}
      <i class="icon-laptop"></i>
      {{#if showOsxApp }}
      <a class="userhome-apps__button" href="https://update.gitter.im/osx/latest" target="_blank"><i class="icon-apple"></i>OSX</a>
      {{/if}}
      {{#if showWindowsApp }}
      <a class="userhome-apps__button" href="https://update.gitter.im/win/latest" target="_blank"><i class="icon-windows"></i>Windows</a>
      {{/if}}
      {{#if showLinuxApp}}
      <a class="userhome-apps__button" href="https://update.gitter.im/linux32/latest" target="_blank"><i class="icon-linux"></i>Linux 32</a>
      <a class="userhome-apps__button" href="https://update.gitter.im/linux64/latest" target="_blank"><i class="icon-linux"></i>Linux 64</a>
      {{/if}}
      {{/unless}}
      <i class="icon-mobile"></i>
      <a class="userhome-apps__button" href="http://appstore.com/gitter" target="_blank"><i class="icon-apple"></i>iPhone</a>
      <a class="userhome-apps__button" href="https://play.google.com/store/apps/details?id=im.gitter.gitter" target="_blank"><i class="icon-android"></i>Android</a>
      <br>
      <a class="userhome-apps__link" href="/apps" target="_blank">See all apps</a>

    </section>
  </div>

  {{{ generateTroupeContext troupeContext }}}
  {{{ bootScript 'router-userhome' jsRoot=jsRoot }}}
</body>
</html>
