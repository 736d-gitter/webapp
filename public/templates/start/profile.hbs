{{#content "header"}}
<h1>Welcome let's get you started</h1>

{{/content}}

<div class="trpStartContainer trpStartBody" style="">
  <div class="trpStartContent">

    <form id="updateprofileform" class="trpStartForm">
      <div style="">
        <div class="trpStartNumber">
          <div>1</div>
        </div>
        <div class="label">What's your full name?</div>
        <div class="input">
            <input id="displayName" type="text" name="displayName" class="open">
        </div>
      </div>


      <div style="margin-top: 40px">
        <div style="display: inline-block;">
          <div class="trpStartNumber">
            <div>2</div>
          </div>
          <div class="label">Pick a username</div>
          <div class="input">
              <input type="text" class="open" id="username" name="username">
          </div>
          <div class="help" style="height: 60px">
            <div class="tip-message valid-message">This will be your personal address on Troupe<br></div>
            <div class="not-valid-message" style="color: #e74c3c; display: none" >The username you have chosen is not available<br></div>
            <div class="valid-message trpGreen">www.trou.pe/<span id="show-user-name">username</span></div><br>
          </div>
        </div>
        <div class="trpStartHelp" style="display: none">
          <div class="label2" style="margin-top: 6px; margin-bottom: 10px;">Here are some suggestions for you</div>
          <div class="name-suggestions">
          </div>
        </div>
      </div>

      <div style="margin-top: 20px">
        <div class="trpStartNumber">
          <div>3</div>
        </div>
        <div class="label">Choose a password</div>
        <div class="input">
            <input id="password" type="password" name="password" class="open">
        </div>
        <div class="help">
          At least 6 characters.<br>
        </div>
      </div>
    </form>
  </div>
</div>

<div class="trpStartContainer blue-text">
  <div class="trpStartContent">
    <div style="margin-top: 40px">
      <a href="#" id="next-button" class="trpButtonMedium trpBtnGreen">Next</a>

    </div>

  </div>
</div>
