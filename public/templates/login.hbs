</head>
<body>
    <div class="container" id="page">

        <div class="row">
            <div class="span12">
                <img src="images/logo.png" alt=""><Br>
                <br>
            </div>
        </div>

        <!-- Main hero unit for a primary marketing message or call to action -->
        <form action="/login" method="post">
        <div class="troupe-hero">
            <div class="troupe-hero-content">
                <h1>Login</h1>
                <div class="row-fluid">
                    <div class="span6">
                        <div class="box white">

                            <label for="email">Email address</label> 
                            <input name="email" id="email" type="text" class="span3" placeholder="Email address">

                            <label for="password">Password</label>      
                            <input name="password" id="password" type="password" class="span3" placeholder="Password">

                            <label class="checkbox">
                                <input type="checkbox" name="rememberMe" value="1">
                                Remember me on this computer
                            </label>
                        </div>
                    </div>
                </div>


                <p>
                    <br>
                    <input type="submit"  class="btn btn-primary btn-large getstarted" name="submit" value="Login &raquo;">
                </p>
            </div>
        </div>
        </form>

        <hr>

        <footer>
            <p>&copy; Troupe 2012</p>
        </footer>


        <div class="modal hide fade" id="imageModal">
            <div class="modal-header">
                <a class="close" data-dismiss="modal">Ã—</a>
                <h3>Upload a picture</h3>
            </div>
            <div class="modal-body">
                <form target="uploadFrame" method="post" enctype="multipart/form-data" action="/avatar">
                    <input type="file" name="files">
                </form>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-primary button-save-picture">Save picture</a> <a href="#" class="btn" data-dismiss="modal">Close</a>
            </div>
        </div>
        <iframe src="" name="uploadFrame" id="uploadFrame" style="display:none"></iframe>

    </div>

</body>
