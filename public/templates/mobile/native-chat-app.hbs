<!doctype html>
<html lang="en" {{#if appCache}}manifest="{{appCache}}"{{/if}}>
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=no"/>
  <meta http-equiv="X-UA-Compatible" content="chrome=1">
  <meta charset="utf-8">

  <title>Troupe</title>

  <link rel="stylesheet" href='/bootstrap/css/trpMobileChat.css'>

  {{{ generateTroupeContext troupeContext accessToken=accessToken page='chat' }}}

  <link rel="shortcut icon" href='{{ cdn "images/2/favicon8.ico"}}'>

</head>
<body>

  <div class="trpMobileAmuse fade-in" id="chat-amuse">
    <div class="trpMobileAmuseIcon">
      <img src='{{cdn "images/2/troupe-ajax-guy-green.gif" }}'><br><br>Loading
    </div>
  </div>


  <div id="pageContainer" class="platform">
    <div id="mainPage">

      <div class="contentBody mobile-scroll-class" id="content-frame">
        <div class="frame-chat">
          <div class="trpChatPanel" id="chat-frame">
            <div class="chatPanel" id="frame-chat"></div>
          </div>
        </div>
      </div>

      <div class="trpChatInputArea" id="chat-input"></div>

    </div>
  </div>

  {{>require_wrapper}}
  {{{bootScript "routers/mobile/native/chat-router" }}}

</body>
</html>
