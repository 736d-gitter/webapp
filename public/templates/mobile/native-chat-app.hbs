<!doctype html>
{{#if appCache}}
<html lang="en" manifest="{{appCache}}">
{{else}}
<html lang="en">
{{/if}}
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1, user-scalable=no"/>
  <meta name="format-detection" content="telephone=no" />
  <meta http-equiv="X-UA-Compatible" content="chrome=1">
  <meta charset="utf-8">

  <title>Gitter</title>

  <link rel="stylesheet" href='{{ cdn "styles/mobile-native-chat.css" appcache=appCache }}'>

  {{{ generateTroupeContext troupeContext accessToken=accessToken page='chat' appcache=appCache }}}

  <link rel="shortcut icon" href='{{ cdn "images/favicon.ico" appcache=appCache }}'>

</head>
<body>

  <div id="mainPage">
    <div id="content">
      <div class="contentBody mobile-scroll-class" id="content-frame">
      </div>
    </div>

    <div class="{{!-- trpChatInputArea --}}  chat-input__container  js-chat-input-container" id="chat-input"></div>
  </div>

  {{{ bootScript "mobile-native-chat" appcache=appCache }}}

</body>
</html>
