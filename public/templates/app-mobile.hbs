<html class="no-js" lang="en">
<!--<![endif]-->
<head>
  <meta http-equiv="X-UA-Compatible" content="chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1"/>
	<meta charset="utf-8">

	<title>{{troupeName}} - Troupe</title>

	<link rel="stylesheet" href='{{cdn "bootstrap/less/trp2.less" }}'>
  <link rel="stylesheet" href='{{cdn "bootstrap/less/mtrp.less" }}'>
  <link href='https://fonts.googleapis.com/css?family=Lustria' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Yanone+Kaffeesatz:200' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
  <link rel="chrome-webstore-item"
    href="https://chrome.google.com/webstore/detail/edpmlaohjokcmefhjghaeeikjjcjplmi">

  {{>require_config}}

  {{#login}}
    <script data-main='{{cdn "js/app-login.js" }}' src='{{cdn "js/libs/require/2.0.4/require-jquery-min.js" }}' type="text/javascript"></script>
  {{/login}}
  {{^login}}
    <script data-main='{{cdn "js/app.js" }}' src='{{cdn "js/libs/require/2.0.4/require-jquery-min.js" }}' type="text/javascript"></script>
  {{/login}}
	<script type="text/javascript">
	window.troupeContext = {{{troupeContext}}};
	</script>
    <!-- Le HTML5 shim, for IE6-8 support of HTML5 elements -->
    <!--[if lt IE 9]>
      <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    <!-- Le fav and touch icons -->
    <link rel="shortcut icon" href="images/favicon.ico">

</head>
<body>
  <div class="trpHeaderWrap">
    <div class="trpHeaderContainer">
      <div class="trpHeader troupe-selector">
        <ul>
          <li class="trpHeaderTitle"><span class="label-troupeName">{{troupeName}}</span><img src='{{cdn "images/2/icon-dropdown.png" }}' class="trpSelectorArrow" width="13" height="12"></li>
        </ul>
      </div>
    </div>
  </div>

  <div class="slidingview_wrapper">

    <div class="trpNavWrap" id="sidebar">
      <div class="trpNavContainer">
        <div class="trpNav">
          <div class="trpNavItemContainer" id="nav-chat">
            <div class="trpNavItemIcon">
              <img src='{{cdn "images/2/icon-chat.png" }}' id="chat-icon" width="20" height="17">
            </div>
            <div class="trpNavItemText">
              <a href="#chat">Chat</a>
            </div>
            <div class="trpNavNotification label-notification"></div>
          </div>

          <div class="trpNavItemContainer" id="nav-mail">
            <div class="trpNavItemIcon">
              <img src='{{cdn "images/2/icon-mail.png" }}' id="mail-icon" width="19" height="11">
            </div>
            <div class="trpNavItemText">
              <a href="#mail">Mail</a>
            </div>
            <div class="trpNavNotification label-notification"></div>
          </div>

          <div class="trpNavItemContainer" id="nav-files">
            <div class="trpNavItemIcon">
              <img src='{{cdn "images/2/icon-files.png" }}' id="file-icon" width="19" height="18">
            </div>
            <div class="trpNavItemText">
              <a href="#files">Files</a>
            </div>
            <div class="trpNavNotification label-notification"></div>
          </div>

          <div class="trpNavItemContainer" id="nav-people">
            <div class="trpNavItemIcon">
              <img src='{{cdn "images/2/icon-people.png" }}' id="people-icon" width="21" height="19">
            </div>
            <div class="trpNavItemText">
              <a href="#people">People</a>
            </div>
            <div class="trpNavNotification label-notification"></div>
          </div>

        </div>
      </div>
    </div>

 <div class="trpContentWrap" id="body">
    <div class="trpContentContainer">

      <div class="contentBody" id="primary-view">

          <div class="mtrpMobileSpinner">
              <img src='{{cdn "images/2/ajax-loader.gif" }}' class="trpSpinner">
          </div>

      </div>

    </div>
  </div>


  </div>


</body>
</html>
