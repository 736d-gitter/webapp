}

.button.blur {
  color: white;
  background-color: rgba(255,255,255,0.15);
}

.button.blur:hover {
  background-color: rgba(255,255,255,0.3);
}

.button.green:hover {
  background-color: rgba(29,206,115, 1);
}

.interested {
  background-color: rgba(0,0,0,0.5);
  border-radius: 6px;
  padding: 38px 28px;
  margin: 40px 0;
}

.write-explain {
