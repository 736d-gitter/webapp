    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
    <link rel="shortcut icon" href='{{cdn "images/2/gitter/favicon5-error.png" }}'>
    <style type="text/css">
      body {
        background-color: #ecf1ec;
      }

      .image {
         position: absolute;
         top: 40%;
         left: 45%;
         margin-left: -32px; /* Half the width */
      }

      .error {
        position: absolute;
        top: 40%;
        left: 45%;
        margin-left: 50px;
        font-family: 'Open Sans', 'Sans';
        font-size: 24px;
        color: #666;
        width: 600px;
      }

      .error-text {
        font-size: 18px;
      }

      .error-input {
        font-size: 22px;
        border: 0;
        outline: 0;
        padding: 0;
        margin: 0;
        background: transparent;
      }

      .error-input:focus {
        border: 0;
        outline: 0;
        
      }

      a {
        color: #1dce73;
      }

    </style>

  </head>

  <style>

  </style>

  <body>

    <a href="{{homeUrl}}"><img class="image" src="{{cdn "images/2/gitter/logo-mark-blue-nochat-64.png"}}" width="64" title="The sad face"></a>

    <div class="error">
      Gitter<br>
      <input id="error-text" class="error-input" size="20"><br><br>
      {{#if stack}}
      <pre style="font-size:small">{{{stack}}}</pre>
      {{/if}}
    </div>


<script>

  var text = "500 error, oh no---------------- :(";
  var input = $( "#error-text" );
  input.select();
  setTimeout(startTyping, 1000, input, text);


function startTyping(input, text) {

  for ( var i = 0; i < text.length; i++ )
  {
    console.log(text.charAt(i));
    setTimeout(addText,120*i, input, text.charAt(i));
  }
}

function addText(i,c) {
  if (c !== '-') i.val( i.val() + c );
}


</script>

  </body>
</html>
