<div class="right-toolbar-region" id="right-toolbar-layout">
  <div class="right-toolbar right-toolbar--collapsible">
    <header class="right-toolbar__header">
      <div class="search js-search">
        {{{ prerenderView "js/views/search/tmpl/search-input" wrap="div" className="search-input" }}}
      </div>
    </header>
    <div id="search-results" class="right-toolbar__body search-results" style="display: none;">
       {{{ prerenderView "js/views/search/tmpl/search" wrap="div" className="right-toolbar right-toolbar--collapsible" }}}
    </div>
    <div id="toolbar-top-content" class="right-toolbar__body">
      <div id="people-list">
        <div class="trpToolbarHeader" id="top-header">
          <h5 class="trpToolbarHeaderItem selected" id="people-header">
            People
          </h5>
          {{#isRepo}}
            <h5 class="trpToolbarHeaderItem" id="info-header">
              Repo info
            </h5>
          {{/isRepo}}
        </div>
        <div class="trpToolbarList">
          <div class="trpToolbarListContent" id="people-roster">
            <div>
              {{{ prerenderView 'js/views/people/tmpl/peopleCollectionView' }}}
            </div>
          </div>
          <div class="trpToolbarListContent" id="repo-info" style="display: none"></div>
        </div>
      </div>

      <div class="trpTroupeRelatedContent" id="activity-region">
        {{{ activityItemPrerender activityEvents wrap="div" }}}
      </div>
    </div>

    <footer id="zendesk-footer" class="right-toolbar__footer">
      <a href="http://gitter.zendesk.com" target="_blank" style="text-decoration: none; display: block;">
        <div class="support">
          <i class='octicon octicon-question'></i>
          <div class="trpActionsMenuLabel" style="margin-top: -4px">Gitter Support</div>
        </div>
      </a>
    </footer>
  </div>
</div>
