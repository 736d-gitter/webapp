<script type="text/javascript">
window.addEventListener("message", function(e) {
  if(e.data !== "oauth_upgrade_complete") return;
  $('#upgrade-div').hide();
  $('#upgrade-complete').show();
}, false);

$(document).ready(function() {
  $('#upgrade').on('click', function(e) {
    e.preventDefault();
    window.open('/login/upgrade?scopes=user:email');
  });
});

</script>
