<head>
  <meta http-equiv="X-UA-Compatible" content="chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <meta charset="utf-8">
  <meta name="apple-itunes-app" content="app-id=632039322"/>

  <title>Troupe Login</title>

  <link rel="stylesheet" href='{{cdn "bootstrap/css/mtrp.css" }}'>
  <link rel="shortcut icon" href="images/favicon.ico">


  {{>require_wrapper}}

  {{{bootScript "login" skipCore=true}}}

  {{>load_font_css}}

</head>

<body>
<div class="mtrpLoginOuterContainer">
  <div class="mtrpLoginContainer">
    <div class="mtrpLoginLogo"><img src="{{cdn "images/2/logo-mark-green-square-black-text.png"}}" width="171" height="64"></div>
    <div class="mtrpLoginFormContainer" id="panel-login">
      <div class="mtrpLoginForm">
        <form name="loginform" id="loginform" method="POST">
          {{#if oauth}}
          <input type="hidden" name="oauth" value="2">
          <input type="hidden" name="client_id" value="{{query.client_id}}">
          <input type="hidden" name="redirect_uri" value="{{query.redirect_uri}}">
          <input type="hidden" name="response_type" value="{{query.response_type}}">
          <input type="hidden" name="scope" value="{{query.scope}}">
          {{/if}}

          <div class="mtrpLoginFieldContainer">
            <input name="email" value="" id="email" type="email" class="mtrpLoginFormItem" placeholder="Email address">
            <input name="password" id="password" type="password" class="mtrpLoginFormItem" placeholder="Password">
          </div>
<!--           <div class="mtrpLoginSignup" id="button-signup">
            <a href="#" class="trpButtonBig trpBtnGreen" id="new-user">New user</a>
          </div> -->
          <div class="mtrpLoginSubmit" id="button-login">
            <a href="#" class="trpButtonBig trpBtnGreen" id="submit">Login &raquo;</a>
          </div>
          <input type="submit" style="visibility: hidden">
        </form>
      </div>
    </div>

    <div class="mtrpSignupForm" id="panel-signup" style="display:none">
      Very sorry, Troupe is invite only<br> at the moment<br>
       <a href="#" class="mtrpLoginBack trpButtonBig trpBtnGreen" id="button-back">Back</a>
    </div>

   <div class="mtrpLoginFailure" id="login-failure">
      <span class="trpModalTitle"><span class="trpWhite">Login failed.</span></span>
      <a href="#" class="trpModalFailureText button-request-new-password">Forgot password?</a>
   </div>

   <div class="mtrpLoginFailure" id="resetpwd-failure">
      <span class="trpModalTitle"><span class="trpWhite">Can't reset password.</span></span>
      <span class="trpModalBody">Was that the right email address?</span>
   </div>

  <div class="mtrpLoginFailure" id="resetpwd-confirm">
    <div class="trpModalTitle">On it's way!</div
    <div class="trpModalBody">We just sent you an email for resetting your password.</div>
  </div>

  </div>
</div class="mtrpLoginOuterContainer">

</body>
</html>
