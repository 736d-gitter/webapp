  <meta charset="utf-8">

  <title>Troupe Login</title>

  <link rel="stylesheet" href='{{cdn "bootstrap/less/mtrp.less" }}'>
  <link href='https://fonts.googleapis.com/css?family=Lustria' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Yanone+Kaffeesatz:200' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
  <link rel="shortcut icon" href="images/favicon.ico">

</head>
<body>
  <div class="mtrpLoginContainer">
    <div class="mtrpLoginLogo"><img src="{{cdn "images/2/logo-mark-white.png"}}"></div>
    <div class="mtrpLoginForm">
      <form action="/login" method="post" name="loginform">
        <input name="email" id="email" type="text" class="mtrpLoginFormItem" placeholder="Email address">
        <input name="password" id="password" type="password" class="mtrpLoginFormItem" placeholder="Password">
        <a href="javascript: submitform()" class="trpButtonBig trpBtnWhite" id="submit">Login &raquo;</a>
      </form>
    </div>
  </div>

  <script src="/js/libs/retina/retina.js"></script>

  <script>
    function submitform()
      {
        document.loginform.submit();
      }
  </script>

</body>
