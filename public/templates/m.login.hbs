<head>
  <meta http-equiv="X-UA-Compatible" content="chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <meta charset="utf-8">

  <title>Troupe Login</title>

  <link rel="stylesheet" href='{{cdn "bootstrap/css/mtrp.css" }}'>
  <link href='https://fonts.googleapis.com/css?family=Lustria' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Yanone+Kaffeesatz:200' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css'>
  <link rel="shortcut icon" href="images/favicon.ico">
    
  {{>require_config}}
  <script data-main='{{cdn "js/login.js" }}' src='{{cdn "js/libs/require/2.0.4/require.js"}}'></script>

</head>

<body>
  <div class="mtrpLoginContainer">
    <div class="mtrpLoginLogo"><img src="{{cdn "images/2/logo-mark-white.png"}}"></div>
    <div class="mtrpLoginForm" id="panel-login">
      <form name="loginform" id="loginform">
        <div class="mtrpLoginFieldContainer">
          <input name="email" value="mike.bartlett@gmail.com" id="email" type="text" class="mtrpLoginFormItem" placeholder="Email address">
          <input name="password" id="password" type="password" class="mtrpLoginFormItem" placeholder="Password">
        </div>
        <div class="mtrpLoginSignup" id="button-signup">
          <a href="#" class="trpButtonBig trpBtnWhite" id="new-user">New user</a>
        </div>
        <div class="mtrpLoginSubmit" id="button-login">
          <a href="#" class="trpButtonBig trpBtnWhite" id="submit">Login &raquo;</a>
        </div>
        <input type="submit" style="visibility: hidden">
      </form>
    </div>
    
    <div class="mtrpSignupForm" id="panel-signup">
      Sorry, Troupe is invite only<br> at the moment<br>
      <a href="#" class="mtrpLoginBack trpButtonBig trpBtnWhite" id="button-back">Back</a>    
    </div>
   
   <div class="mtrpLoginFailure" id="panel-failure">
     Login failed.
   </div>
   
  </div>
  
</body>
</html>
