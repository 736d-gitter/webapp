{{#if ethereal}}
  <span class="room-list-item__name {{ iconClass }}" title="{{ title }}">{{ name }}</span>
{{else}}
  <div class="room-list-item__icon">
    <i class='{{ iconClass }}'></i>
  </div>
  <span class="room-list-item__name" title="{{title}}">{{ name }}</span>
  <i class="room-list-item__action js-close-button icon-cancel-circle" data-id="{{ id }}"></i>
  {{#if unreadItems}}
    <span class="js-unread-badge room-list-item__unread-badge">{{ unreadItems }}</span>
  {{/if}}
{{/if}}
