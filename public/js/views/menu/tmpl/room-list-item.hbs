{{else}}
  <span class="room-list-item__name {{iconClass}}" title="{{title}}">{{name}}</span>
  <div class="room-list-item__labels">{{#if unreadItems}}<span class="js-unread-badge room-list-item__unread-badge">{{unreadItems}}</span>{{/if}}{{#unless oneToOne}}<span class="js-leave-button room-list-item__leave" data-id="{{id}}" title="Leave"></span>{{/unless}}{{#unless lurk}}<span class="js-close-button room-list-item__close" data-id="{{id}}" title="Hide"></span>{{/unless}}
  </div>
