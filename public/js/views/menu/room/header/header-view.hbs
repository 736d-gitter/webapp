<div class="panel-header__container--all js-profile-menu-toggle" id="panel-header-all" aria-describedby="panel-header__accessible-description--all" aria-controls="profile-menu" aria-expanded="false" tabindex="0">
  <h2 class="panel-header__title--all">All Conversations</h2>
  <p id="panel-header__accessible-description--all" class="panel-header__accessible-description">
    Activate or click this element to toggle the profile menu
  </p>
  <img id="panel-header-profile-toggle"
       class="panel-header__icon--all"
       src='{{cdn "images/svg/menu/down-arrow.svg"}}'
       height="12"
       width="12"/>
</div>

<label class="panel-header__container" id="panel-header-search" for="form-left-menu-search-box">
  <h2 class="panel-header__title--search">Search</h2>
</label>

<div class="panel-header__container" id="panel-header-favourite">
  <h2 class="panel-header__title--favourite">Favourites</h2>
</div>

<div class="panel-header__container" id="panel-header-people">
  <h2 class="panel-header__title--people">People</h2>
</div>

<div class="panel-header__container" id="panel-header-group">
  <h2 class="panel-header__title--group">Communities</h2>
</div>

<div class="panel-header__container" id="panel-header-org">
  {{#if avatarUrl}}
    <img class="panel-header__org-avatar"
      src="{{avatarUrl}}"
      height="22"
      width="22"/>
  {{/if}}
  <h2 class="panel-header__title--org">{{groupName}}</h2>
</div>
