<a href="{{when absoluteRoomUri absoluteRoomUri uri}}" id="room-item__container" class="room-item__container {{#if active}}active{{/if}} {{#if focus}}focus{{/if}}">
  {{#if avatarUrl}}
     <img class="room-item__avatar" {{{ avatarSrcSet avatarUrl 22 }}} >
  {{/if}}
  <h2 id="room-item-title" class="room-item__title">
    {{#if namePieces}}
      {{~#each namePieces~}}
        <span class="room-item__title-piece">{{this}}</span>
      {{~/each~}}
    {{else if displayName}}
      <span class="room-item__title-piece">{{displayName}}</span>
    {{else}}
      <span class="room-item__title-piece">{{name}}</span>
    {{/if}}
  </h2>
</a>
