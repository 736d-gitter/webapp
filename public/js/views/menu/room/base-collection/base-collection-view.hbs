<header id="collection-header" class="collection-header {{#if isSuggestion}}suggestion{{/if}}">
  <h2 id="collection-header-text" class="collection__title">{{ header }}</h2>
  {{#if isSuggestion}}
    <i id="dismiss-suggestion" class="icon-cancel-circle collection-header__dismiss-suggestion"></i>
  {{else}}
    <i id="dismiss-suggestion" class="icon-cancel-circle collection-header__dismiss-suggestion hidden"></i>
  {{/if}}
</header>
<div id="collection-list" class="collection-list"></div>

<a class="room-item__container hidden" id="room-item-show-more" href="{{orgRoomUrl}}" title="More {{selectedOrgName}} rooms">
  <img class="room-item__avatar--show-more" src="{{cdn "images/svg/menu/show-more-rooms.svg"}}" />
  <h2 class="room-item__title--show-more">Show All</h2>
</a>
