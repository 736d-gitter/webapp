<a href="{{when absoluteRoomUri absoluteRoomUri uri}}" id="room-item__container" class="room-item__container {{#if active}}active{{/if}}">
  {{#if avatarUrl}}
     <img class="room-item__avatar" {{{ avatarSrcSet avatarUrl 22 }}} >
  {{/if}}
  <h2 id="room-item-title"  class="room-item__title">
    {{#if namePieces}}
      {{~#each namePieces~}}
        <span class="room-item__title-piece">{{this}}</span>
      {{~/each~}}
    {{else}}
      {{name}}
    {{/if}}
  </h2>
  {{#unless isSearch}}
    <button id="room-item-options-toggle" class="room-item__options" title="Toggle room actions dropdown">
      <i class="room-item__options-icon" aria-hidden="true"></i>
    </button>
  {{/unless}}

  <div class="room-item__unread-indicator pulse-animation {{#if unreadItems}}has-unreads{{else if mentions}}has-mentions{{else if lurkActivity}}has-activity{{/if}}" aria-label="{{#if mentions}}You were mentioned in {{name}}{{else}}Unread activity in a {{name}}{{/if}}">
    {{#if mentions}}
      {{!-- `@` --}}
    {{else if unreadItems}}
      {{unreadItems}}
    {{/if}}
  </div>

</a>
<ul class="room-item__options-menu">
  {{#if isNotOneToOne}}
    <li class="room-item__options-menu__item">
      <button class="room-item__options-menu__item__btn" id="room-item-leave">Leave</button>
    </li>
  {{/if}}
  <li class="room-item__options-menu__item">
    <button class="room-item__options-menu__item__btn" id="room-item-hide">Hide</button>
  </li>
</ul>
