<a href="{{when absoluteRoomUri absoluteRoomUri uri}}" id="room-item__container" class="room-item__container {{#if selected}}selected{{/if}} {{#if focus}}focus{{/if}}">
  {{#if avatarSrcset}}
    <img class="room-item__avatar"
         src="{{ avatarSrcset.src }}"
         srcset="{{avatarSrcset.srcset}}"
         height="{{avatarSrcset.size}}"
         width="{{avatarSrcset.size}}"/>
  {{/if}}
  <h2 class="room-item__title">{{name}}</h2>
  {{#unless isSearch}}
    <img class="room-item__options" id="room-item-options-toggle" src='{{cdn "images/svg/menu/room-options.svg"}}'/>
  {{/unless}}

  <div
    class="room-item__unread-indicator
      {{#if unreadItems}}has-unreads{{else if mentions}}has-mentions{{else if lurkActivity}}has-activity{{/if}}"
    aria-label="{{#if mentions}}You were mentioned in {{name}}{{else}}Unread activity in a {{name}}{{/if}}"
  >
    {{#if mentions}}
      {{!-- `@` --}}
    {{else if unreadItems}}
      {{unreadItems}}
    {{/if}}
  </div>

</a>
<ul class="room-item__options-menu">
  {{#if isNotOneToOne}}
    <li class="room-item__options-menu__item">
      <button class="room-item__options-menu__item__btn" id="room-item-leave">Leave</button>
    </li>
  {{/if}}
  <li class="room-item__options-menu__item">
    <button class="room-item__options-menu__item__btn" id="room-item-hide">Hide</button>
  </li>
</ul>
