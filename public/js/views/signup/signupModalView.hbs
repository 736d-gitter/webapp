<div class="trpModalTitle">Create a Troupe</div>
<div class="trpCreateForm">
	<form id="signup-form">
		<input placeholder="Choose a name for your Troupe" class="trpInput required" minlength="4" name="troupeName" autofocus><br>
		{{#unless existingUser}}
   		<input placeholder="Enter your email address" class="trpInput required email" name="email">
   		<div class="trpModalSubtext">We will send you a confirmation email</div>
    {{/unless}}
    {{#if userId}}
      <input type="hidden" name="userId" value="{{userId}}">
    {{/if}}
		<input type="submit" name="submit" value="Create" class="trpModalButton trpButtonBig trpBtnGreen" />
	</form>
</div>
<div class="trpModalFailure signup-failure" style="display:none">
  <span class="trpModalTitle"><span class="trpModalFailureText" id="failure-text">Signup failed.</span></span>
</div>