<div class="trpCreateForm">
	<form id="signup-form">
		<input placeholder="Choose a name for your Troupe" class="trpInput required" minlength="4" name="troupeName" id="troupeName" autofocus style="width: 85%"><br>
    {{#if userId}}
      <input type="hidden" name="userId" value="{{userId}}">
    {{/if}}

    {{#if upgradeOneToOne}}
    <div id="invites-for-create">
      <!-- Include invite view here. -->
    </div>
    {{/if}}

		<button type="submit" name="submit" class="trpModalButton trpButtonBig trpBtnGreen" style="margin-top: 20px">Create</button>
	</form>
</div>
<div class="trpModalFailure signup-failure" style="display:none">
  <span class="trpModalTitle"><span class="trpModalFailureText" id="failure-text">Signup failed.</span></span>
</div>