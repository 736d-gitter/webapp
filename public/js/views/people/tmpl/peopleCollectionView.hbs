<span class="frame-people">
  <span id="roster-region">
    <ul id="roster-view" class="roster">{{#each users}}<li class="js-model-id-{{id}}">{{{ widget 'avatar' user=this showStatus=true }}}</li>{{/each}}</ul>
  </span>
  <div id="remaining-region">
    <div id="remaining-view" class="remaining">
    {{#unless oneToOne}}
      <a href="#add" class="trpAddBadge" style="text-decoration: none"><div style="text-align: center;">&#10011; Add</div></a>
    {{/unless}}
    {{#if hasHiddenMembers}}
      <a href="#people" class="trpMoreBadge" style="text-decoration: none"><div style="text-align: center;">See All</div></a><small>({{userCount}} members)</small>
    {{else}}
      <a href="#people" class="trpMoreBadge" style="text-decoration: none"><div style="text-align: center;">Details</div></a>
    {{/if}}
    </div>
  </div>
</span>
