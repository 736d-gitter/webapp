{{#if inactive}}
  <div class='invited'>
    <p><small>{{login}} is not on Gitter yet.</small></p>
  </div>
{{/if}}
<div style="float: left"><img src="{{avatarUrl}}" class="avatar-l"/></div>
<div class="trpPopoverDetails">
  <h2>{{name}}</h2>
  {{#if isGitHubUser}}
    <h3><a href="http://github.com/{{login}}" target="_blank">{{login}}</a></h3>
      {{#if isLoaded}}
        <div class="vcard-stats">
            <strong class="vcard-stat-count">{{followers}}</strong>
            {{ pluralize followers 'follower' 'followers' }}&nbsp;
            <strong class="vcard-stat-count">{{public_repos}}</strong>
            {{ pluralize public_repos 'repo' 'repos' }} &nbsp;
            <strong class="vcard-stat-count">{{following}}</strong>
            following &nbsp;
        </div>
      {{/if}}
  {{/if}}

  <ul class="trpUserDetails">
    {{#if company}}
      <li>
        <div class='trpUserDetails__icon'>
          <i class='octicon octicon-organization'></i>
        </div>
        <div class="trpUserDetails__text">{{ company }}</div>
      </li>
    {{/if}}

    {{#if location}}
      <li>
        <div class='trpUserDetails__icon'>
          <i class='octicon octicon-location'></i>
        </div>
        <div class="trpUserDetails__text">{{ location }}</div>
      </li>
    {{/if}}

    {{#if email}}
      <li>
        <div class='trpUserDetails__icon'>
          <i class='octicon octicon-mail'></i>
        </div>
        <div class="trpUserDetails__text"><a class="email" href="mailto:{{email}}">{{ email }}</a></div>
      </li>
    {{/if}}

    {{#if blog}}
      <li>
        <div class='trpUserDetails__icon'>
          <i class='octicon octicon-link'></i>
        </div>
        <div class="trpUserDetails__text"><a target="_blank" href="{{blogUrl}}" class="url" rel="nofollow me">{{ blog }}</a></div>
      </li>
    {{/if}}
  </ul>
</div>
