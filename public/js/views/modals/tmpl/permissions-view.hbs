<div>
  <section>
    <h2>
      Admins
    </h2>

    <p class="permissions-add-admin-description">
      Admins can delete the room, edit permissions, ban people, and edit room info like the welcome message and topic.
    </p>
  </section>


  <section>
    <div class="permissions-admin-list-permission-options-wrapper js-permissions-options-wrapper">
      <img class="permissions-people-list-item-avatar" {{{ avatarSrcSet groupAvatarUrl 44 }}}>

      <div class="permissions-people-list-item-name">
        <select class="permissions-admin-list-permission-options-select js-permissions-options-select">
          {{#each permissionOptions}}
            <option value="{{ this.value }}" {{#if this.selected}}selected{{/if}}>{{ this.label }}</option>
          {{/each}}
        </select>
      </div>

      <div class="permissions-admin-list-permission-options-status-wrapper">
        <i class="permissions-admin-list-permission-options-spinner icon-spin hidden js-permissions-options-spinner"></i>
        <i class="permissions-admin-list-permission-options-error-icon icon-attention-circled hidden js-permissions-options-error-icon"></i>
      </div>
    </div>

    <p class="permissions-extra-admins-note js-permissions-extra-admins-note">
      Additionally, grant admin access to these specific users:
    </p>

    <section class="permissions-admin-list-wrapper scroller">
      <div class="permissions-admin-list-root js-permissions-admin-list-root"></div>
    </section>

    <input
      class="permissions-people-input js-permissions-people-input"
      placeholder="Search for people...">
  </section>

  <div class="permission-error js-permissions-sd-warning"></div>
  <div class="permission-error js-permissions-model-error"></div>
  <div class="permission-error js-permissions-submission-error"></div>
</div>
