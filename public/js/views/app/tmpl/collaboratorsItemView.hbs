<img src="{{ avatar_url }}">
<div class="content">
  {{#if showEmailForm }}
  <form>
    <p>
      <input class="js-invite-email" type="email" placeholder="{{ text }}" required />
      <input type="submit" value="Invite" class="button-caribbean--small" />
    </p>
  </form>
  {{else}}
  <p>{{ text }}</p>
  {{/if}}
</div>

{{#if showAddButton}}
<div class="action">
  <a class="button-caribbean--small js-add">Add</a>
</div>
{{/if}}
