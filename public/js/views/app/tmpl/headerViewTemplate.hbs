<div class="chat-header__avatar {{#if premium}}chat-header__avatar--pro{{/if}}">
  <img src='{{avatarUrl}}'>
</div>
<div class="chat-header__buttons">
{{#if user}}
  <div class="chat-header__favourite">
    <i class="js-favourite-button icon-star-1 {{#if troupeFavourite}}favourite{{/if}}"></i>
  </div>
  {{#unless archives}}
    {{#unless oneToOne}}
      <div class="chat-header__settings">
        <i class="js-chat-settings octicon octicon-tools" data-toggle="dropdown"></i>
      </div>
    {{/unless}}
  {{/unless}}
{{/if}}
</div>
<div class="chat-header__content">
  <h1 class='js-chat-name' title="{{ lockTooltip }}">
    {{#if githubLink}}
      <a href="{{ githubLink }}" target="_blank">{{ troupeName }}</a>
    {{else}}
      {{ troupeName }}
    {{/if}}
    {{#if isPrivate}}
      <i class='octicon octicon-lock'></i>
    {{/if}}
  </h1>
  <p class="js-chat-topic">
    {{#unless oneToOne}}
      {{troupeTopic}}
    {{/unless}}
  </p>
</div>
