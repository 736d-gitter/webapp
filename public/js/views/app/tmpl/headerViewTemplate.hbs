{{!-- <div class="trpHeaderContainer"> --}}
  {{#unless archives}}
    {{#unless oneToOne}}
      {{#if user}}
        <div class="settingsCog  chat-header__settings">
          <div class="dropdown-toggle" data-toggle="dropdown"></div>
        </div>
      {{/if}}
    {{/unless}}
  {{/unless}}
  {{#if user}}
    <div class="trpTroupeFavourite  chat-header__favourite" id="favourite-button">
      <i class="trpHeaderFavIcon  js-favourite-button  {{#if troupeFavourite}}favourite{{/if}}" width="24" height="24"></i>
    </div>
  {{/if}}
  <div class="gtrNameTopic  chat-header__content">
    {{#if githubLink}}
      <h1 id="name-label">
        <a href="{{githubLink}}" target="_blank">{{troupeName}}</a>
      </h1>
    {{else}}
      <h1 id="name-label">{{troupeName}}</h1>
    {{/if}}
    <p id="trpTopic">
      {{#unless oneToOne}}
        {{troupeTopic}}
      {{/unless}}
      {{#oneToOne}}
        <a href="http://github.com{{troupeUri}}" target="github">github.com{{troupeUri}}</a>
      {{/oneToOne}}
    </p>
  </div>
{{!-- </div> --}}