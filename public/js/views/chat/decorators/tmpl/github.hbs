<div class="whicon">
  <img class="notification-icon" src="{{favicon}}"> 
</div>

<div class="whbody">
  <a href="https://github.com/{{user}}" target="_blank">{{user}}</a> {{action}} {{human_action}} 

  {{#if commits}}
  {{commits.length}} commit(s)
  {{/if}}

  <a href="https://github.com/{{repo}}" target="_blank">{{repo}}</a>

  {{#if branch}}
  to {{branch}}
  {{/if}}

  {{#if title}}
  : <a href="{{url}}" target="_blank">{{title}}</a>
  {{else}}
  (<a href="{{url}}" target="_blank">more</a>)
  {{/if}}
  
  {{#if commits}}
  <ul class="commits">
  {{#each commits}}
  <li><a href="{{url}}" target="_blank">{{message}}</a></li>
  {{/each}}
  </ul>
  {{/if}}
</div>
