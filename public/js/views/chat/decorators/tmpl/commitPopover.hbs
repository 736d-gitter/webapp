<div class="trpChatAvatar">
  <span>
    <div class="trpDisplayPicture avatar-s" style="background-image: url({{author.avatar_url}});">
   </div>
  </span>
</div>
<div class="trpChatBox">
  <div class="trpChatDetails">
    <div class="trpChatFrom">{{author.login}}</div>
    <div class="trpChatTime"> &bull; {{date}}</div>
  </div>
  <div class="trpChatText">
    <p>{{files.length}} file{{#unless isFileLengthSingular}}s{{/unless}} changed. {{stats.additions}} addition{{#unless isAdditionsSingular}}s{{/unless}}, {{stats.deletions}} deletion{{#unless isDeletionsSingular}}s{{/unless}}.</p>
    <ul class="file-list">
      {{#each files}}
      <li><a href="{{blob_url}}" target="github" class="{{status}}" title="{{fullFilename}}">{{filename}}</a></li>
      {{/each}}
    </ul>
    {{#if diff}}
    <pre><code>{{diff}}</code></pre>
    {{/if}}
  </div>
</div>
