<div class="modal-content trpInviteModal">
  <div class="form-inline" id="share-form">
    <div class="trpEnterEmailRow">
      <div class="trpDisplayPicture avatar-xs trpSearchInviteResult" style="background-image: url('/avatarForEmail/abc@def.com');"></div>
      <input id="custom-email" type="email" name="inviteSearch" class="trpInput" placeholder="friend@work.com" autocomplete="off"/>
      <button id="custom-email-button" class="trpInviteButton">Invite</button>
    </div>


  <div id="invites" class="trpSearchInvites"></div>
  </div>

    {{#inviteToTroupe}}
    {{#unless importedGoogleContacts}}
     <a href='/google/contacts?returnTo={{returnToUrl}}' style="text-decoration: none;">
      <div class="separate-unit" style="display: inline-block;">
        <div class="trpButton trpCopyButton" style="margin-left: 0px">
          <img src='{{cdn "images/2/icon-gmail.png"}}' style="vertical-align: middle; margin-right: 4px" width="16"> <span style="vertical-align: middle">Invite Gmail contacts</span>
        </div>
      </div>
    </a>
    {{/unless}}
    {{/inviteToTroupe}}
    {{#inviteToConnect}}
      <a href='/google/contacts?returnTo={{returnToUrl}}' style="text-decoration: none">
        <div class="separate-unit" style="display: inline-block;">
          <div class="trpButton trpCopyButton" style="margin-left: 0px">
            <img src='{{cdn "images/2/icon-gmail.png"}}' style="vertical-align: middle; margin-right: 4px" width="16"> <span style="vertical-align: middle">Add Gmail contacts</span>
          </div>
        </div>
      </a>
    {{/inviteToConnect}}

</div>

<div class="trpModalFailure share-failure" style="display:none">
  <span class="trpModalTitle"><span class="trpModalFailureText" id="failure-text">Invite failed.</span></span>
</div>

<div class="modal-success">
  <div class="trpModalTitle">
    Your invites were sent successfully<br><br>
    <button class="trpModalButton trpButtonBig trpBtnGreen" id="finished-button">Close</button>
  </div>
</div>

<div class="trpModalInfo">
  <div class="trpBodyMedium" style="display:inline-block;">Or share this: <span class="trpGreen" id="sharelink">{{basePath}}/{{uri}}</span></div>
  <div style="display: inline-block; float: right"><div class="trpButton trpCopyButton" id="copy-button"> copy</div></div>
</div>

<div class="trpModalSuccess" id="import-success" style="display:none">
  <div class="trpModalBody" style="padding-bottom: 0"><span class="trpWhite">Successfully connected to Gmail</span></div>
  <div class="trpModalSubtext" style="padding-bottom: 0"><span class="trpWhite">You can now search and invite your Gmail contacts in the  search box above.</span></div>
</div>