<div class="github-comment">
  <div class="activity-time">{{widget "timeago" time=sent compact=true}}</div>

  <span class="gtrActivityItemText"><a href="https://github.com/{{payload.sender.login}}" target="_blank"><span class='mention'>{{payload.sender.login}}</span></a> commented <a class="issue {{payload.issue.state}}" href="{{payload.issue.html_url}}" target="_blank" data-link-type="issue" data-issue="{{payload.issue.number}}" data-issue-repo="{{payload.repository.full_name}}">#{{payload.issue.number}}</a></span>

  <div style="clear: both;"></div>
</div>
