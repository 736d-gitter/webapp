<div class="huboard">
  <div class="activity-time">{{widget "timeago" time=sent compact=true position="left"}}</div>

  <span class="gtrActivityItemText"><span class='mention' data-link-type="mention" data-screen-name="{{meta.user}}">{{meta.user}}</span> {{meta.action}} <span class="issue" data-link-type="issue" data-issue="{{meta.number}}" data-issue-repo="{{meta.repo}}">#{{meta.number}}</span> {{#if meta.assignee}}to <span class='mention' data-link-type="mention" data-screen-name="{{meta.assignee}}">{{meta.assignee}}</span>{{else}}{{context}}{{/if}}</span>

  <div style="clear: both;"></div>
</div>
