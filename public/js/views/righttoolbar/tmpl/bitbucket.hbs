<div class="github-push">
  <div class="activity-time">{{widget "timeago" time=sent compact=true}}</div>

  <span class="gtrActivityItemText"><a href="https://bitbucket.com/{{meta.user}}" target="_blank">{{meta.user}}</a> pushed to <a href="https://bitbucket.org/{{meta.repo}}" target="_blank">{{meta.repo}}</a><br>
    <span class="activity-commit">
    {{#if multiple_commits}}
      {{meta.commits.length}} commits
    {{else}}
      {{first_commit.message}} <a href="{{first_commit.url}}" target="_blank" style="opacity: 0.6">(compare)</a>
    {{/if}}
    </span>
  </span>

  <div style="clear: both;"></div>
</div>
