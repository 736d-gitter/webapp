<div class="github-push">
  <div class="activity-time">{{widget "timeago" time=sent compact=true}}</div>

  <span class="gtrActivityItemText"><span class='mention' data-link-type="mention" data-screen-name="{{payload.pusher.name}}">{{payload.pusher.name}}</span> on {{branch_name}}<br>
    <span class="activity-commit">
      {{#if commit_text}}
        {{commit_text}}
      {{/if}}
      {{#each commits}}
        <a href="https://github.com/{{../repo}}/commit/{{id}}" target="github" data-link-type="commit" data-commit-sha="{{id}}" data-commit-repo="{{../repo}}" class="commit">{{short_sha}}</a>
      {{/each}}
      {{#if hidden_commit_count}}
        and {{hidden_commit_count}} more
      {{/if}}
      <a href="{{payload.compare}}" target="_blank" style="opacity: 0.6">(compare)</a>
    </span>
  </span>

  <div style="clear: both;"></div>
</div>
