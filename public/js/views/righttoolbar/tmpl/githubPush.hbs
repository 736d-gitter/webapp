<div class="github-push">
  <div class="activity-time">{{widget "timeago" time=sent compact=true}}</div>

  <span class="gtrActivityItemText"><a href="https://github.com/{{payload.pusher.name}}" target="_blank"><span class='mention' data-link-type="mention" data-screen-name="{{payload.pusher.login}}">{{payload.pusher.name}}</span></a> on {{branch_name}}<br>
    <span class="activity-commit">
    {{#if multiple_commits}}
      {{commits_count}} commits <a href="{{payload.compare}}" target="_blank" style="opacity: 0.6">(compare)</a>
    {{else}}
      {{commit_text}} <a href="{{payload.compare}}" target="_blank" style="opacity: 0.6">(compare)</a>
    {{/if}}
    </span>
  </span>

  <div style="clear: both;"></div>
</div>
