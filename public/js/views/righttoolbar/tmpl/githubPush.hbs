<div class="github-push">
  <i class='octicon octicon-repo-push'></i>
  <div class="activity-time">{{widget "timeago" time=sent compact=true position="left"}}</div>

  <div class="gtrActivityItemText">
    <p class="activity-commit">
      <span class='mention' data-link-type="mention" data-screen-name="{{payload.pusher.name}}">{{payload.pusher.name}}</span> on {{branch_name}}
    </p>
    <p class="activity-commit">
      {{#each commits}}<span data-link-type="commit" data-commit-sha="{{id}}" data-commit-repo="{{../repo}}" class="commit">{{short_message}}</span> {{/each}}{{#if hidden_commit_count}}and {{hidden_commit_count}} more {{/if}}<a href="{{payload.compare}}" target="_blank" style="opacity: 0.6">(compare)</a>
    </p>
  </div>
</div>
