<div class="github-issue-{{payload.action}}">
  <div class="activity-time">{{widget "timeago" time=sent compact=true}}</div>

  <span class="gtrActivityItemText"><span class='mention' data-link-type="mention" data-screen-name="{{payload.sender.login}}">{{payload.sender.login}}</span> {{payload.action}} <a class="issue {{payload.issue.state}}" href="{{payload.issue.html_url}}" target="_blank" data-link-type="issue" data-issue="{{payload.issue.number}}" data-issue-repo="{{payload.repository.full_name}}">#{{payload.issue.number}}</a></span>

  <div style="clear: both;"></div>
</div>
