<div class="sprintly">
  <div class="service-sprite sprintly-logo"></div>
  <div class="activity-time">{{widget "timeago" time=sent compact=true position="left"}}</div>

  <span class="gtrActivityItemText">{{payload.attributes.created_by.first_name}} {{payload.attributes.created_by.last_name}} {{sprintly_action}}<br>
    <div class="activity-detail"><a href="{{payload.attributes.short_url}}" target="_blank">
      {{#if payload.attributes.title}} {{payload.attributes.title}} {{/if}}
      {{#if payload.attributes.item.title}} {{payload.attributes.item.title}} {{/if}}
    </a></div>
  </span>

  <div style="clear: both;"></div>
</div>
