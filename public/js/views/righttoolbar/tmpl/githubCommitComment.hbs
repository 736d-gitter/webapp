<div class="github-comment">
  <div class="activity-time">{{widget "timeago" time=sent compact=true}}</div>

  <span class="gtrActivityItemText"><a href="https://github.com/{{payload.sender.login}}" target="_blank"><span class='mention' data-link-type="mention" data-screen-name="{{payload.sender.login}}">{{payload.sender.login}}</span></a> commented <span class="issue {{payload.issue.state}}"><a href="{{payload.comment.html_url}}" target="_blank">{{payload.comment.commit_id}}</a></span></span>

  <div style="clear: both;"></div>
</div>
