<div class="github-comment">
  <div class="activity-time">{{widget "timeago" time=sent compact=true}}</div>

  <span class="gtrActivityItemText"><span class='mention' data-link-type="mention" data-screen-name="{{payload.sender.login}}">{{payload.sender.login}}</span> commented on <span data-link-type="commit" data-commit-sha="{{commit.id}}" data-commit-repo="{{meta.repo}}" class="commit">{{commit.short_sha}}</span></span>

  <div style="clear: both;"></div>
</div>
