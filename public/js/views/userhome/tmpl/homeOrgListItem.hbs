{{#if user.createRoom}}
  <a href="/{{org.name}}" style="text-decoration: none">
    <div style="display: inline-block"><img src="{{org.avatar_url}}" width="48" height="48" class="org-avatar" style="vertical-align: middle; margin-right: 20px"></div>
    <div style="display: inline-block; width: 200px; vertical-align: middle">{{org.name}}</div>
  </a>
{{else}}
  {{#if org.room}}
    <a href="/{{org.name}}" style="text-decoration: none">
      <div style="display: inline-block"><img src="{{org.avatar_url}}" width="48" height="48" class="org-avatar" style="vertical-align: middle; margin-right: 20px"></div>
      <div style="display: inline-block; width: 200px; vertical-align: middle">{{org.name}}</div>
    </a>
  {{else}}
    <div style="display: inline-block"><img src="{{org.avatar_url}}" width="48" height="48" class="org-avatar" style="vertical-align: middle; margin-right: 20px"></div>
    <div class="disabled" style="display: inline-block; width: 200px; vertical-align: middle">{{org.name}}</div>
  {{/if}}
{{/if}}
