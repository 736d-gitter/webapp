<table class="row">
  <tr>
    <td class="wrapper last">
      <table class="twelve columns">
        <tr>
          <td>
            <h2>Hey, there's a new topic in {{ forum.name }}</h2>
            <table>
              <tr>
                <td class="avatar"><img {{{ avatarSrcSet notification.topic.user.avatarUrl 24 }}} class="avatar"></td>
                <td class="chat"><strong>{{ notification.topic.user.username }}</strong></td>
              </tr>
              <tr>
                <td></td>
                <td>{{ notification.topic.body.title }}</td>
              </tr>
              <tr>
                <td></td>
                <td>{{ notification.topic.body.html }}</td>
              </tr>
            </table>
            <br>
            <table>
              <tr>
                <td class="avatar">
                  <a href="{{ emailBasePath }}/{{ notification.topic.uri }}" style="text-decoration: none" class="button-green">Open topic</a>
                </td>
              </tr>
            </table>
            <br>
            <hr>
            <br>
          </td>
          <td class="expander"></td>
        </tr>
      </table>

  </tr>
</table>
