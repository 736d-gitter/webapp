{
  "env": {
    "commonjs": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "plugins": [
    "mocha",
    "react"
  ],
  "rules": {
    "mocha/no-exclusive-tests": "error",
    "node/no-unpublished-require": "off"
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
